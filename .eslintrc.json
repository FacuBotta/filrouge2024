{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "standard",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "react",
    "prettier"
  ],
  "rules": {
    "semi": ["error", "always"],
    "prettier/prettier": ["error", {
      "semi": true
    }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}